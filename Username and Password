import time

username=input("Please enter a username:")
password=input("Please enter a password:")

database_lock=print("Data: -LOCKED-")

login=input("To access this important information, enter your username:")

while login != username:
    print("Incorrect username.\n")
    login=input("To access this important information, enter your username:")
else:
    print("Username correct.\n")

login2=input("Now enter your password:")

while login2 != password:
    print("Incorrect password. You are now timed out for 3 seconds.\n")
    time.sleep(3)
    login2=input("Enter your password:")
else:
    print("Password correct. You may now see the data!\n")
    
